@model SurveyApp.Models.Users.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_LightLayout";
}

<div class="lr-row row">
    <h1>Register</h1>
    <div id="r-form" class="col-md-4">
        <form action="/Users/SubmitRegistration" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="lr-group form-group">
                <label asp-for="Username" class="r-label control-label">Username:</label>
                <input asp-for="Username" class="r-input form-control"/>
                <span asp-validation-for="Username" class="text-danger"></span>
                
            </div>
            <div class="lr-group form-group">
                <label asp-for="Email" class="r-label control-label">Email:</label>
                <input asp-for="Email" class="r-input form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="lr-group form-group">
                <label asp-for="Password" class="r-label control-label">Password:</label>
                <input asp-for="Password" class="r-input form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="lr-group form-group">
                <label asp-for="PasswordConfirm" class="r-label control-label">Password Confirm:</label>
                <input asp-for="PasswordConfirm" class="r-input form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="lr-btn btn btn-primary" />
            </div>
        </form>
    </div>
</div>