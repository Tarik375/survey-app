@model SurveyApp.Models.Auth.LoginViewModel

@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
    Layout = "_LightLayout";
}

<div class="lr-row row">
    <h1>Login</h1>
    <div id="l-form" class="col-md-4">
        <form action="/Auth/ValidateCredentials?ReturnUrl=@System.Web.HttpUtility.UrlEncode(returnUrl)" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="lr-group form-group">
                <label asp-for="UsernameOrEmail" class="l-label  control-label">Username or email:</label>
                <input asp-for="UsernameOrEmail" class="l-input form-control" />
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="lr-group form-group">
                <label asp-for="Password" class="l-label control-label">Password:</label>
                <input asp-for="Password" class="l-input form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="lr-btn btn btn-primary" />
            </div>
            <div class="lr-group">
            <a id="lr-a" asp-controller="Users" asp-action="Register">Don't have an account? Register now!</a>
            </div>
        </form>
    </div>
</div>
