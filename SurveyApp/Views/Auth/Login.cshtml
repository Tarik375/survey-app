@model SurveyApp.Models.Auth.LoginViewModel

@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
    Layout = "_LightLayout";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Auth/ValidateCredentials?ReturnUrl=@System.Web.HttpUtility.UrlEncode(returnUrl)" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsernameOrEmail" class="control-label">Username or email:</label>
                <input asp-for="UsernameOrEmail" class="form-control" />
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password:</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <a  asp-controller="Users" asp-action="Register">Don't have an account? Register now!</a>
        </form>
    </div>
</div>
