@model SurveyApp.Models.Surveys.SurveyDetailsViewmodel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1> 
<h3>@Model.Description</h3> 
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Question</th>
            <th>Actions</th>
        </tr>
    </thead> 
    <tbody>
        @foreach (var question in Model.Questions)
        {
            <tr>
                <td>@question.Content</td>
                <td style="width: 35%; text-align: right">
                    <div class="w-100">
                        <a asp-controller="Questions" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Questions" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
 </table>

